<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/widget_layout_root"
    android:background="@color/colorPrimaryDark"
    android:padding="@dimen/widget_margin">
    <ImageView
        android:id="@+id/widget_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/widget_song_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:focusable="true"
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:background="@drawable/widget_gradient_text"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textColor="#ffffff"
        android:textSize="16sp"
         />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/widget_song_name">
<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/previous"
    android:id="@+id/widget_previous_btn"
    android:layout_marginEnd="20dp"
    android:layout_alignParentBottom="true"
    android:contentDescription="@string/skip_to_previous_song"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/widget_previous_btn"
        android:id="@+id/widget_play_btn"
        android:contentDescription="@string/play_or_pause_the_song"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/widget_play_btn"
        android:id="@+id/widget_next_btn"
        android:contentDescription="@string/skip_to_next_song"/>
    </RelativeLayout>
</RelativeLayout>